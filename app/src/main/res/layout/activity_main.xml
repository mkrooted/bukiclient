<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mkrooted.bukiclient.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/default_welcome"
            android:id="@+id/welcome_text"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:id="@+id/name_layout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/pib_label"
                android:id="@+id/name_label"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_data_message"
                android:id="@+id/name_view"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/avatar"
                android:src="@drawable/no_avatar"
                android:layout_weight="0.2"
                android:scaleType="fitStart" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/orders_label"
            android:id="@+id/orders_label"
            android:layout_weight="0.1"
            android:gravity="bottom|center_horizontal"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Активні - "
                android:id="@+id/active_orders_label"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_data_message"
                android:id="@+id/active_orders"
                android:layout_weight="0.5"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Завершені - "
                android:id="@+id/textView"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_data_message"
                android:id="@+id/ended_orders"
                android:layout_weight="0.5"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Персональні - "
                android:id="@+id/textView3"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_data_message"
                android:id="@+id/personal_orders"
                android:layout_weight="0.5"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Потенційні - "
                android:id="@+id/textView5"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/no_data_message"
                android:id="@+id/potential_orders"
                android:layout_weight="0.5"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/never_updated"
            android:id="@+id/last_update_date"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:gravity="bottom|center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/update_btn_label"
            android:id="@+id/update_btn"
            android:layout_weight="0.1"
            android:textSize="20sp"
            />

    </LinearLayout>
</RelativeLayout>
